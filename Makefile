NAME = push_swap
CC = cc
CFLAGS = -Wall -Wextra -Werror -g
# AR = ar rcs
RM = rm -rf
SRCS = srcs/lists.c \
	srcs/checkerrors.c \
	srcs/push_swap.c
OBJS = $(SRCS:.c=.o)

INCLUDE = -L ./libft -lft

all: $(NAME)

$(NAME): $(OBJS)
	$(CC) $(OBJS) -o $(NAME)

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	$(RM) $(OBJS)

fclean: clean
	$(RM) $(NAME)

re: fclean all

.PHONY: all clean fclean re
